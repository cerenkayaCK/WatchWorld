
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card mb-3">
    <div class="card-body">
        <form class="row align-items-center">
            <div class="col-auto">
                <label>Category</label>
            </div>
            <div class="col-auto">
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option value="">Choose</option>
                  
                </select>
            </div>
            <div class="col-auto">
                <label>Brand</label>
            </div>
            <div class="col-auto">
                <select class="form-select" asp-for="BrandId">
                    <option value="">Choose</option>
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Value">@brand.Text</option>
                    }
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.CatalogItems)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="product-container shadow p-3">
                <div class="product-image">
                    <img src="~/img/products/@item.PictureUri" alt="@item.Name" class="w-100" />
                </div>
                <div class="product-name my-2 h6" title="@item.Name">
                    @item.Name
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>@($"{item.Price.ToString("C")} ")</span>
                    <a href="#" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-cart-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

